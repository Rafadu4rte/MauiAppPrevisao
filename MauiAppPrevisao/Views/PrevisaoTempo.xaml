<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppPrevisao.Views.PrevisaoTempo"
    Title="Previsão do Tempo">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry
            x:Name="txtCidade"
            Placeholder="Digite a cidade"
            FontSize="18" />

        <Button
            Text="Buscar Previsão"
            Clicked="BuscarPrevisao_Clicked"
            BackgroundColor="#4A90E2"
            TextColor="White"
            CornerRadius="8" />

        <Frame x:Name="resultadoFrame" IsVisible="False" BackgroundColor="#FFF" Padding="12" CornerRadius="8" Margin="0,10,0,0">
            <VerticalStackLayout Spacing="6">
                <Label Text="Cidade:" FontAttributes="Bold" />
                <Label x:Name="lblCidade" />

                <Label Text="Temperatura:" FontAttributes="Bold" />
                <Label x:Name="lblTemp" />

                <Label Text="Umidade:" FontAttributes="Bold" />
                <Label x:Name="lblUmidade" />

                <Label Text="Condição:" FontAttributes="Bold" />
                <Label x:Name="lblCondicao" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Ver Histórico" Clicked="VerHistorico_Clicked" BackgroundColor="#333" TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
