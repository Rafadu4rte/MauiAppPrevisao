<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisao.Views.CadastroUsuario">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Cadastro de UsuÃ¡rio"
               FontSize="22"
               HorizontalOptions="Center" />

        <Label Text="Nome:" />
        <Entry x:Name="txt_nome"
               Placeholder="Nome completo" />
        
        <Label Text="Data de Nascimento:" />
        <DatePicker x:Name="dt_nascimento" />

        <Label Text="E-mail:" />
        <Entry x:Name="txt_email"
               Placeholder="E-mail"
               Keyboard="Email" />

        <Label Text="Senha:" />
        <Entry x:Name="txt_senha"
               Placeholder="Senha"
               IsPassword="True" />

        <Button Text="Cadastrar"
                Clicked="btn_cadastrar_Clicked" />

    </VerticalStackLayout>
</ContentPage>
